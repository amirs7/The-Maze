<html>
	<head>
		<link rel="stylesheet" href="/stylesheets/signup.css">
		<link href="https://cdn.rawgit.com/rastikerdar/sahel-font/v1.0.0-alpha21/dist/font-face.css" rel="stylesheet" type="text/css"/>
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
		<meta charset="utf-8">
	</head>
	<body>
		<div class="maze_image">
			<img src="/images/maze_pic.jpg">
		</div>
		<div class="header">
			<h1> The Maze </h1>
		</div>
		<form class="signup_form" action="signup" method="post">
			<div class="img"></div>
			<div class="topbar">
				<div class="topbar_login"> 
					<h3> ثبت نام کنید!</h3>
				</div>
			</div>
			<div class="formelements">
				<div class="input_container">
					<div class="icon">
                        <i class="fa fa-user"> </i> 
                    </div>
					<input required name="name" placeholder="نام" value="<%=data.name%>"/>
                </div>
                <div class="input_container">
                    <div class="icon">
                        <i class="fa fa-envelope-open"> </i> 
                    </div>
					<input required name="email" placeholder="ایمیل" value="<%=data.username%>"/>
                </div>
				<div class="input_container">
                    <div class="icon">
                        <i class="fa fa-unlock-alt"> </i>
                    </div>
					<input required name="password" placeholder="رمز عبور" type="password"/>
                </div>
                <div class="input_container">
                    <div class="icon">
                        <i class="fa fa-unlock-alt"> </i>
                    </div>
                    <input required name="repeatPassword" placeholder="تکرار رمز عبور" type="password"/>
                </div>
			</div>
			<div class="bottombar">
				<button type="submit">
					<h4>ثبت نام</h4>
				</button>
			</div>
		</form>
		<%if(status === 'success'){%>
			<div class="successful_message_container">
					<div id="message" class="successful_message">
						<%=message%>
					</div>
			</div>
		<%}else if(status === 'error'){%>
			<div class="successful_message_container">
					<div id="message" class="error_message">
						<%=message%>
					</div>
			</div>
		<%}%>
	</body>
</html>